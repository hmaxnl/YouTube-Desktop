<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" Background="{DynamicResource BackgroundBrush}"
             x:Class="YouTubeGUI.Themes.Default.Controller.ControllerGUI">
    <Grid ColumnDefinitions="10, *, *, 10" RowDefinitions="10, *, *, 10">
        <StackPanel Grid.Column="1" Grid.Row="1">
            <TextBlock Text="FontSize:" Foreground="White"/>
            <TextBox Text="{Binding ThemeFontSize}" Foreground="White" Background="{DynamicResource BackgroundBrush}"/>
        </StackPanel>
    </Grid>
</UserControl>