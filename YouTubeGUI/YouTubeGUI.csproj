      </AvaloniaResource>
      <None Update="Images\loading_image.jpg">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
    </ItemGroup>
    <ItemGroup>
      <Folder Include="Controls\Layouts" />
    </ItemGroup>
